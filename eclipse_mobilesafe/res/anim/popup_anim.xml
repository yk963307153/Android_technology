<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 透明 -->
    <alpha
        android:duration="500"
        android:fromAlpha="0"
        android:toAlpha="1" />

    <!--
         缩放
    	从几倍缩放到几倍
    	以哪个点为基准点缩放
    -->
    <scale
        android:duration="500"
        android:fromXScale="0.5"
        android:fromYScale="0.5"
        android:pivotX="0"
        android:pivotY="50%"
        android:toXScale="1"
        android:toYScale="1" />

</set>